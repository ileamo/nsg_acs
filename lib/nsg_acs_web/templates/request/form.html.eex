<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :from, class: "control-label" %>
    <%= text_input f, :from, class: "form-control" %>
    <%= error_tag f, :from %>
  </div>

  <div class="form-group">
    <%= label f, :request, class: "control-label" %>
    <%= text_input f, :request, class: "form-control" %>
    <%= error_tag f, :request %>
  </div>

  <div class="form-group">
    <%= label f, :response, class: "control-label" %>
    <%= text_input f, :response, class: "form-control" %>
    <%= error_tag f, :response %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
