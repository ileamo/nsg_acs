<h2>Listing Requests</h2>

<table class="table">
  <thead>
    <tr>
      <th>Дата</th>
      <th>Клиент</th>
      <th>Ключ</th>
      <th>Результат</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for request <- @requests do %>
    <tr>
      <td><%= request.inserted_at %></td>
      <td><%= request.from %></td>
      <td><%= "#{request.request["nsg_device"]}_#{request.request["serial_num"]}" %></td>
      <td><%= request.response %></td>

      <td class="text-right">
        <span><%= link "Show", to: request_path(@conn, :show, request), class: "btn btn-default btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
